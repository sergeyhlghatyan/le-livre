# ============================================
# Le Livre Production Environment Template
# ============================================
# Copy this file to .env and update with your production values
# DO NOT commit the actual .env file with secrets to version control

# ============================================
# Database - PostgreSQL
# ============================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=lelivre_gold
POSTGRES_USER=lelivre
POSTGRES_PASSWORD=<CHANGE-ME-USE-SECURE-PASSWORD>

# ============================================
# Database - Neo4j
# ============================================
NEO4J_URI=bolt://neo4j:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=<CHANGE-ME-USE-SECURE-PASSWORD>
NEO4J_DATABASE=neo4j

# ============================================
# External APIs
# ============================================
OPENAI_API_KEY=<YOUR-OPENAI-API-KEY>
GOVINFO_API_KEY=<YOUR-GOVINFO-API-KEY>

# ============================================
# JWT Authentication
# ============================================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=<CHANGE-ME-USE-OPENSSL-RAND-HEX-32>
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# Security & Environment
# ============================================
ENVIRONMENT=production

# Note: CORS origins are configured in backend/app/config.py defaults
# Do NOT add CORS_ORIGINS to this file

# ============================================
# Frontend Configuration
# ============================================
# This should be set during Docker build
# In production, the frontend uses /api (proxied by nginx)
VITE_API_BASE_URL=/api

# ============================================
# SECURITY NOTES
# ============================================
# 1. Change ALL <CHANGE-ME> placeholders before deploying
# 2. Generate passwords with: openssl rand -base64 32
# 3. Generate JWT secret with: openssl rand -hex 32
# 4. Get OpenAI API key from: https://platform.openai.com/account/api-keys
# 5. Never commit the actual .env file to version control
# 6. Keep this template (.env.production.example) in version control
