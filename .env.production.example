# Production Environment Configuration Template
# Copy this file to .env in production and fill in actual values

# ============================================
# Database - PostgreSQL
# ============================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=lelivre_gold
POSTGRES_USER=lelivre
POSTGRES_PASSWORD=<CHANGE-ME-USE-SECURE-PASSWORD>

# ============================================
# Database - Neo4j
# ============================================
NEO4J_URI=bolt://neo4j:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=<CHANGE-ME-USE-SECURE-PASSWORD>
NEO4J_DATABASE=neo4j

# ============================================
# External APIs
# ============================================
OPENAI_API_KEY=<YOUR-OPENAI-API-KEY>
GOVINFO_API_KEY=<YOUR-GOVINFO-API-KEY>

# ============================================
# JWT Authentication
# ============================================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=<CHANGE-ME-USE-OPENSSL-RAND-HEX-32>
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# Security & Environment
# ============================================
ENVIRONMENT=production

# CORS origins - Your production domain(s), comma-separated
# Example: https://lelivre.yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# Frontend Configuration
# ============================================
# This should be set during Docker build
# In production, the frontend uses /api (proxied by nginx)
VITE_API_BASE_URL=/api
